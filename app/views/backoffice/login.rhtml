<div class="Title24Orange" id="titlearea">
  Backoffice
</div>

<div id="highlightareaAyuda">
  <div id="textareaAyuda">
    <p class="error"><%= flash[:notice] %></p>
    <% form_tag do -%>
    <table width="500" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td class="Title14Orange">Login</td>
      </tr>
      <tr>
        <td class="Text13Grey">
          <%= text_field_tag 'login', params[:login], :autocomplete => 'on', :class => "formField" %>
        </td>
      </tr>
    </table>
    <br />
    <table width="500" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td class="Title14Orange">Password</td>
      </tr>
      <tr>
        <td class="Text13Grey">
          <%= password_field_tag 'password', nil, :class => "formField" %>
        </td>
      </tr>
    </table>
    <br />
    <table width="500"  border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td>
          <span class="CellTablebuttonL">
            <%= submit_tag 'Acceder al backoffice', :class => 'button' %>
          </span>
        </td>
      </tr>
    </table>
    <% end %>
    <br />
    <br />
  </div>
</div>
