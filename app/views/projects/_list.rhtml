<table width="100%">
  <colgroup>
    <col width="75%" />
    <col width="25%" />
  </colgroup>
  <%= table_header_remote :labels => ['Nombre', '&nbsp;'], :non_orderable => [1], :update => 'GastoDatos' %>
  <% if @projects.size > 0 %>
  <%= render :partial => 'project', :collection => @projects %>
  <% else %>
  <tr>
    <td colspan="5" class="LabelForEmptyListing">
      No ha creado ninguna categoría por ahora,
      <%= link_to 'haga click aquí si desea crear uno', :action => 'new' %>
    </td>
  </tr>
  <% end %>
</table>

<% if @project_pages.page_count > 1 %>
<div id="PageNumeration" class="Text11Orange"><br />
  <%=
    pagination_browser(
      :paginator => @project_pages,
      :url => {
        :order_by  => @current_order_by,
        :direction => @current_direction
      }
    )
  %>
</div>
<% end %>